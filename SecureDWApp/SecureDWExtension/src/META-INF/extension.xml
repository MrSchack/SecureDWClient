<extension id="dke.extension" version="1.0" esdk-version="1.0"
           rsbundle-class="dke.extension.Res"
           xmlns="http://jcp.org/jsr/198/extension-manifest" loader="isolated">
  <name>dkeSecureDWClient</name>
  <owner>gruppe01</owner>
  <dependencies>
    <import>oracle.ide</import>
  </dependencies>
  <classpaths>
    <classpath>../../jdev/lib/javacore.jar</classpath>
    <classpath>../../ide/lib/javatools.jar</classpath>
    <classpath>../../ide/lib/oicons.jar</classpath>
    <classpath>../../ide/lib/javatools.jar</classpath>
    <classpath>../../ide/lib/uic.jar</classpath>
    <classpath>../../jlib/jewt4.jar</classpath>
    <classpath>../../jdbc/lib/ojdbc6.jar</classpath>
  </classpaths>
  <hooks>
    <feature-hook>
      <description>A quick introduction to extension developement.</description>
      <optional>true</optional>
    </feature-hook>
    <jdeveloper-hook xmlns="http://xmlns.oracle.com/jdeveloper/1013/extension">
      <actions>
        <action id="dke.extension.keywrap">
          <properties>
            <property name="Name">KeyWrap</property>
            <property name="SmallIcon">${OracleIcons.ORACLE_LOGO}</property>
            <property name="LongDescription">KeyWrap Test</property>
          </properties>
          <controller-class>dke.extension.action.KeyWrapController</controller-class>
          <command-class>dke.extension.action.KeyWrapCommand</command-class>
        </action>
      </actions>
    </jdeveloper-hook>
    <menu-hook>
      <toolbars>
        <toolbar id="javax.ide.view.MAIN_WINDOW_TOOLBAR_ID">
          <section id="javax.ide.tck.toolbar.examplesection"
                   after="javax.ide.NEW_SECTION_ID">
            <item action-ref="dke.extension.keywrap"/>
          </section>
        </toolbar>
      </toolbars>
    </menu-hook>
    <jdeveloper-hook xmlns="http://xmlns.oracle.com/jdeveloper/1013/extension">
      <addins>
        <addin>dke.extension.gui.dockable.MainDockableAddin</addin>
      </addins>
      <actions>
        <action id="dke.extension.MainDockable">
          <properties>
            <property name="Name">SecureDW View</property>
            <property name="SmallIcon">${OracleIcons.USER}</property>
            <property name="LongDescription">SecureDW View</property>
          </properties>
          <controller-class>dke.extension.gui.dockable.ViewDockableController</controller-class>
          <command-class>dke.extension.gui.dockable.ViewDockableCommand</command-class>
        </action>
      </actions>
    </jdeveloper-hook>
  </hooks>
</extension>



