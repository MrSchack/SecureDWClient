<extension id="oracle.ide.extsamples.externaltoolmacros" version="11.1.1.0.0"
           esdk-version="1.0" xmlns="http://jcp.org/jsr/198/extension-manifest">
  <name>ESDK Sample - External Tool Macros</name>
  <owner>Oracle</owner>
  <dependencies>
    <import>oracle.ide.externaltools</import>
  </dependencies>
  <hooks>
    <feature-hook>
      <part-of>oracle.ide.extsamples.allsamples</part-of>
      <description>Demonstrates how to install custom macros into the external tools functionality. </description>
      <optional>true</optional>
    </feature-hook>
    <externaltools xmlns="http://xmlns.oracle.com/ide/extension">
      <macros>
        <macro-class>oracle.ide.extsamples.externaltoolmacros.UserNameMacro</macro-class>
      </macros>
    </externaltools>
  </hooks>
</extension>
