<extension id="oracle.ide.extsamples.balloon" version="11.1.1.0.0"
           esdk-version="1.0" xmlns="http://jcp.org/jsr/198/extension-manifest">
  <name>ESDK Sample - Balloon</name>
  <owner>Oracle</owner>
  <dependencies>
    <import>oracle.ide</import>
  </dependencies>
  <classpaths>
    <classpath>../../ide/lib/uic.jar</classpath>
    <classpath>../../jlib/jewt4.jar</classpath>
  </classpaths>
  <hooks>
    <feature-hook>
      <part-of>oracle.ide.extsamples.allsamples</part-of>
      <description>Shows how to display a notification balloon in the IDE's status bar area.</description>
      <optional>true</optional>
    </feature-hook>
    <jdeveloper-hook xmlns="http://xmlns.oracle.com/jdeveloper/1013/extension">
      <addins>
        <addin>oracle.ide.extsamples.balloon.SampleBalloonAddin</addin>
      </addins>
    </jdeveloper-hook>
  </hooks>
</extension>
